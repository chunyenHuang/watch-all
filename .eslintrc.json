{
    "extends": ["eslint:recommended", "google", "plugin:react/recommended"],
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "max-len": ["error", { "code": 160 }],
        "no-console": ["error", { "allow": ["log", "warn", "error"] }],
        "object-curly-spacing": ["error", "always"],
        "react/prop-types": 0
    },
    "plugins": [
        "react"
    ],
    "env": {
        "node": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "parser": "babel-eslint",
    "globals": {
        "__CLIENT__": true,
        "__SERVER__": true,
        "__DEV__": true,
        "localStorage": true
    }
}
